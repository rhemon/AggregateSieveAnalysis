<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <ScrollView
        android:id="@+id/dataTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:text="Sieve No."
                android:textStyle="bold"
                android:layout_weight="2"
                android:textSize="16sp"
                android:gravity="center"/>
            <TextView
                android:layout_weight="8"
                android:textStyle="bold"
                android:text="Weight Retained"
                android:textSize="16sp"
                android:gravity="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="4"
                android:layout_weight="2"
                android:textSize="14sp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/wtRtatSn4"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_weight="8"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="8"
                android:layout_weight="2"
                android:textSize="14sp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/wtRtatSn8"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_weight="8"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="16"
                android:layout_weight="2"
                android:textSize="14sp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/wtRtatSn16"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_weight="8"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="30"
                android:layout_weight="2"
                android:textSize="14sp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/wtRtatSn30"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_weight="8"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="50"
                android:layout_weight="2"
                android:textSize="14sp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/wtRtatSn50"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_weight="8"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="100"
                android:layout_weight="2"
                android:textSize="14sp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/wtRtatSn100"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_weight="8"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="200"
                android:layout_weight="2"
                android:textSize="14sp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/wtRtatSn200"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_weight="8"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Pan"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_weight="2"/>
            <EditText
                android:id="@+id/wtRtatPan"
                android:singleLine="true"
                android:layout_weight="8"/>
        </TableRow>
    </TableLayout>
    </ScrollView>

    <TextView
        android:id="@+id/errorMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dataTable"
        android:textSize="14sp"
        android:textColor="@color/RED"
        android:visibility="invisible"
        android:gravity = "center"
        android:text="Please enter valid data!"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_state"
        android:text="Enter Data"
        android:id="@+id/enterDataButton"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>